<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pcfix_client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pcfix_client.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pcfix_client.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.pcfix_client.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.pcfix_client.AddOrderActivity"
            android:label="@string/title_activity_add_order" >
        </activity>
        <activity
            android:name="com.example.pcfix_client.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.pcfix_client.OrderDetailActivity"
            android:label="@string/title_activity_order_detail" >
        </activity>
        <activity android:name="com.example.pcfix_client.ViewOrderDetailActivity" >
        </activity>
        <activity
            android:name="com.example.pcfix_client.AdminActivity"
            android:label="@string/title_activity_admin" >
        </activity>
    </application>

</manifest>
