<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/detail_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="维修员名字"
                android:textColor="#0f0"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/detail_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016-02-14"
                android:textColor="#f00"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_list_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="出价:100元"
            android:textColor="#00f"
            android:textSize="12dp" />
    </LinearLayout>

    <Button android:padding="5dp" 
        android:id="@+id/detail_list_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="选择"
        android:textColor="#f0f"
        android:textSize="12dp" 
        android:gravity="center"/>

</LinearLayout>